canvas {
	background-color: white;
	default-points: false;
	default-lines: false;
}

node[place] { 
	text: name; 
	text-color: black;
	text-halo-radius: 2;
	text-halo-color: white;
	font-size: 20;
}

area[landuse] {
	fill-color: lightgreen;
	fill-opacity: 0.2;
}

area[building] {
	fill-color: gray;
}

way[highway] { 
	color: white; 
	width: 3; 
	casing-color: gray; 
	casing-width: 1; 
	text: name; 
	text-color: black; 
	font-size: 10; 
	text-position: line; 
	text-halo-color: white; 
	text-halo-radius: 1; 
}