canvas {
	background-color: white;
	default-points: false;
	default-lines: false;
}

/* ===== Placenames ===== */
node|z16-[place=neighbourhood]				{ text: name; text-color: black; text-halo-radius: 1; text-halo-color: white; font-size: 12; }
node|z16-[place=suburb]						{ text: name; text-color: black; text-halo-radius: 1; text-halo-color: white; font-size: 13; }
node|z16-[place=farm]						{ text: name; text-color: black; text-halo-radius: 1; text-halo-color: white; font-size: 12; }
node|z16-[place=isolated_dwelling]			{ text: name; text-color: black; text-halo-radius: 1; text-halo-color: white; font-size: 12; }
node|z15-[place=hamlet]						{ text: name; text-color: black; text-halo-radius: 1; text-halo-color: white; font-size: 14; }
node|z14-[place=village]					{ text: name; text-color: black; text-halo-radius: 2; text-halo-color: white; font-size: 16; }
node|z10-[place=town]						{ text: name; text-color: black; text-halo-radius: 2; text-halo-color: white; font-size: 18; }
node[place=city]							{ text: name; text-color: black; text-halo-radius: 2; text-halo-color: white; font-size: 22; }

/* ===== Landuse ===== */
area|z14-[landuse=meadow], area|z14-[landuse=farmland]		{ z-index: -5; fill-color: #96E6C2; fill-opacity: 0.3; }
area|z14-[landuse=forest], area|z14-[natural=wood]			{ z-index: -4; fill-color: #8CD6B5; fill-opacity: 0.3; }
area|z14-[landuse=residential]							{ z-index: -6; fill-color: gray;	fill-opacity: 0.2; }


area|z14-[building]											{ z-index: -1; fill-color: gray; fill-opacity: 0.3; }

/* ===== Water ==== */
area|z14-[natural=water]									{ fill-color: #00D6E6;  fill-opacity: 0.4; }
way|z14-[waterway]											{ color: #00D6E6; width: eval("tag('width')"); }
area|z14-[waterway=riverbank], area|z14-[waterway=dock]		{ fill-color: #00D6E6;  fill-opacity: 0.4; }

/* ===== Roads (highway=*) ===== */
/* default text */

/* widths per zoom-level */
way|z-13[highway]	{ width: 1; }
way|z14[highway]	{ width: 3; }
way|z15-16[highway] { width: 5; }
way|z17-20[highway] { width: 10; }

/* colors and styles per highway type. */
way[highway=motorway],way[highway=motorway_link],
way[highway=trunk],way[highway=trunk_link],
way[highway=primary],way[highway=primary_link]						{ color: red;	 casing-color: gray; casing-width: 1; z-index: 6; }
way|z10-[highway=secondary],way|z10-[highway=secondary_link]		{ color: orange; casing-color: gray; casing-width: 1; z-index: 5; }
way|z12-[highway=tertiary],way|z12-[highway=tertiary_link]			{ color: orange; casing-color: gray; casing-width: 1; z-index: 5; }
way|z14-[highway=residential],way|z14-[highway=service],
way|z14-[highway=road],way|z14-[highway=living_street],
way|z14-[highway=unclassified]									{ color: white; casing-color: gray; casing-width: 1; z-index: 4; }
way|z14-[highway=track]											{ color: gray; width: 1; dashes: 6,2; z-index: 5; }

/* pedestrian/cycleway styling */
way|z15-[highway=foot], way|z15-[highway=path], 
way|z15-[highway=footway]										{ color: gray; width: 1; dashes: 6,2; z-index: 3; }
way|z14-[highway=cycleway]										{ color: blue; width: 1; dashes: 2,2; z-index: 3; }